@page "/product/{id}"
@model BootCampWeb.Pages.ProductModel
@{
}
<link rel="stylesheet" href="~/css/Product.css" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<section class="product">
    <div class="product__photo">
        <div class="photo-container">
            <div class="photo-main">
                <img src="@Model.Product.Thumbnail" class="img-thumbnail" />
            </div>
            @* <div class="photo-album">
            <ul>
            @foreach (var im in Model.Product.Images)
            {
            <img src="@im" class="resize" />
            }
            </ul>
            </div> *@
        </div>
    </div>
    <div class="product__info">
        <div class="title">
            <h1>@Model.Product.Title</h1>
        </div>
        <div class="price">
            <span>$ @Model.Product.Price</span>
        </div>
        <div class="description">
            <h3>@Model.Product.Description</h3>
            <ul>
                <li>Discount @Model.Product.DiscountPercentage %</li>
                <li>Rating: @Model.Product.Rating</li>
                <li>Stock: @Model.Product.Stock</li>
                <li>Brand: @Model.Product.Brand</li>
                <li>Category: @Model.Product.Category</li>
            </ul>
        </div>
    </div>
</section>
</div>





